{
    "manifest_version": 3,
    "name": "__MSG_appName__",
    "description": "__MSG_appDesc__",
    "version": "1.1.3",
    "default_locale": "en_US",
    "icons": {
        "16": "img/icon.png",
        "48": "img/icon.png",
        "128": "img/icon.png"
    },
    "action": {
        "default_icon": "img/icon.png",
        "default_title": "__MSG_appName__",
        "default_popup": "popup/popup.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["http://*/*", "https://*/*"],
            "js": ["content.js"],
            "run_at": "document_end"
        }
    ],
    "options_ui": {
        "page": "options/options.html"
    },
    "permissions": [
        "contextMenus",
        "clipboardWrite",
        "storage",
        "tabs",
        "activeTab",
        "notifications",
        "scripting"
    ],
    "host_permissions": [
        "https://archive.is/*",
        "https://archive.ph/*",
        "https://web.archive.org/*",
        "http://*/*",
        "https://*/*"
    ]
}
